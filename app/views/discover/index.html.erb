<h1> Discover Page</h1>

<p><%= button_to "Top Rated Movies", "/users/#{@user.id}/movies" , method: :get, params: { top_rated: true }, :class => "discover" %></p>

<%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |f| %>
  <%= f.label :search, "Discover Movies" %>
  <%= f.text_field :search, value: params[:search] %>
  <%= f.submit "Search Movies", :class => "discover" %>
<% end%>
